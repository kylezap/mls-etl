# Ensure consistent package installation
save-exact=true
package-lock=true

# Use the latest version of npm
engine-strict=true

# Prevent accidental publishing
private=true

# Use the registry specified in package.json
registry=https://registry.npmjs.org/

# Ensure consistent line endings
git-tag-version=true

# Prevent running scripts from untrusted packages
ignore-scripts=false

# Cache settings
cache-min=3600
prefer-offline=true

# Security settings
audit=true
fund=false

# Development settings
progress=true
loglevel=warn 